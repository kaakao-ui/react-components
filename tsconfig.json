{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@kaakao-ui/visually-hidden": ["./packages/visuallyhidden/src/index.ts"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "files": ["utils/types/declarations.d.ts"],
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "**/node_modules", "**/dist"]
}
